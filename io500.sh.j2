#!/usr/bin/env bash

#SBATCH --job-name=test
#SBATCH --account=stackhpc
#SBATCH --partition=stackhpc
#SBATCH --nodes={{ item.nodes }}
#SBATCH --ntasks-per-node={{ item.ntasks_per_node }}
#SBATCH --dependency=singleton

set -euo pipefail

export IO500_CONTAINER_TAG="bb942db"

echo SLURM_JOB_ID: $SLURM_JOB_ID
echo dimensions: '{{ item | to_json }}'
echo SLURM_JOB_NODELIST: $SLURM_JOB_NODELIST

mkdir -p {{ filesystems[item.filesystem].mountpoint }} # TODO: make run specific?
module load eb/OpenMPI/gcc/4.0.0
timestamp=$(date +%Y.%m.%d-%H.%M.%S)
mpirun singularity exec --bind {{ filesystems[item.filesystem].mountpoint }}:{{ filesystems[item.filesystem].mountpoint }} docker://ghcr.io/stackhpc/io500-singularity:${IO500_CONTAINER_TAG} /io500 ./{{ smatrix_template_dest_dir }}/config{{ smatrix_template_suffix }}.ini --timestamp $timestamp
